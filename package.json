{
  "name": "@av/svadba",
  "version": "0.0.0",
  "description": "Project of Svadba",
  "author": "Artem Samarin <av@anclaev.ru>",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "NODE_ENV=development turbo run dev",
    "dev:web": "NODE_ENV=development turbo dev --filter=web",
    "dev:bot": "NODE_ENV=development turbo dev --filter=bot",
    "build:web": "turbo run build --filter=web",
    "build:bot": "turbo run build --filter=bot",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "mkcert": "^3.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.1.1",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './config/git/commitlint.js'"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": [
      "yarn format"
    ]
  },
  "dependencies": {
    "standard-version": "^9.5.0"
  }
}
