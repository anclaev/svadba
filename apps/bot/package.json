{
  "name": "bot",
  "version": "1.0.0",
  "description": "Telegram bot for Svadba",
  "author": "Artem Samarin <av@anclaev.ru>",
  "private": true,
  "main": "dist/main.js",
  "packageManager": "yarn@4.1.1",
  "scripts": {
    "gen-proto": "rimraf src/proto/interfaces && proto-loader-gen-types --longs=String --enums=String  --oneofs --grpcLib=@grpc/grpc-js --outDir=src/proto/interfaces src/proto/*.proto",
    "format": "prettier --write \"src/**/*.ts\" \"e2e/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:ci": "jest --passWithNoTests  --coverage --ci",
    "test:server": "yarn gen-proto && jest --config e2e/jest.config-e2e.ts --passWithNoTests --verbose",
    "dev": "'node -r @swc-node/register' src/main.ts",
    "dev:debug": "GRPC_VERBOSITY=DEBUG GRPC_TRACE=all yarn dev",
    "build": "yarn & yarn gen-proto && rimraf dist && swc ./src -d dist --strip-leading-paths",
    "start": "node dist/main.js"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.7.13",
    "@grpc/reflection": "^1.0.4",
    "dotenv": "^16.5.0",
    "grammy": "^1.35.1",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@repo/shared": "workspace:*",
    "@repo/testing": "workspace:*",
    "@swc-node/jest": "^1.8.13",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}
