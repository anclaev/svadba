{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": ["DATABASE_URL", "TELEGRAM_BOT_TOKEN", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "passThroughEnv": ["SENTRY_AUTH_TOKEN"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "inputs": ["generated/**"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "test": {},
    "test:cov": {},
    "test:ci": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "pre-e2e": {
      "inputs": ["proto/interfaces/**"]
    },
    "e2e": {
      "cache": false,
      "dependsOn": ["db:generate", "pre-e2e", "^e2e"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    }
  }
}
