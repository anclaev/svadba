{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "TELEGRAM_BOT_TOKEN", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "proto/interfaces/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "inputs": ["generated/**"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "test": {},
    "test:cov": {},
    "test:ci": {},
    "test:server": {
      "cache": false,
      "dependsOn": ["^db:generate", "^build", "^test:server"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["^test:e2e"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
